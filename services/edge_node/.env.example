# Edge Node Configuration
# This file should be copied to .env and customized for each edge node deployment

# Node Identity (REQUIRED)
# Each edge node must have a unique NODE_ID and matching NODE_KEY
NODE_ID=DC01
NODE_NAME=Data Center Node 1
NODE_KEY=dc01-secret-key-2024
NODE_LOCATION=Mumbai

# Server Configuration
PORT=8000

# Aggregator Connection
AGGREGATOR_URL=http://localhost:3000

# MQTT Configuration (optional)
MQTT_ENABLED=true
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Telemetry Settings
TELEMETRY_INTERVAL=5

